<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mmci.mmcifocusedswipeboard.MainActivity"
    tools:deviceIds="wear_square">

    <ViewFlipper
        android:id="@+id/daViewFlipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <mmci.mmcifocusedswipeboard.FSBFocusedBoxesView
                android:id="@+id/FSBFocusedBoxesView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <mmci.mmcifocusedswipeboard.FSBFocusedTextView
                android:id="@+id/FSBFocusedTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <mmci.mmcifocusedswipeboard.FSBMiddleLeft
                android:id="@+id/FSBMiddleLeft"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <mmci.mmcifocusedswipeboard.FSBTopLeft
                android:id="@+id/FSBTopLeft"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <mmci.mmcifocusedswipeboard.FSBTopMiddle
                android:id="@+id/FSBTopMiddle"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <mmci.mmcifocusedswipeboard.FSBTopRight
                android:id="@+id/FSBTopRight"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <mmci.mmcifocusedswipeboard.FSBMiddleRight
                android:id="@+id/FSBMiddleRight"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <mmci.mmcifocusedswipeboard.FSBBottomRight
                android:id="@+id/FSBBottomRight"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <mmci.mmcifocusedswipeboard.FSBBottomMiddle
                android:id="@+id/FSBBottomMiddle"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <mmci.mmcifocusedswipeboard.FSBBottomLeft
                android:id="@+id/FSBBottomLeft"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ViewFlipper>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textLongMessage"
        android:ems="10"
        android:id="@+id/editText"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        android:hint="Text"
        android:singleLine="false"
        android:selectAllOnFocus="false"
        android:textSize="15sp"
        android:textAlignment="viewStart"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:src="?android:attr/actionModeCloseDrawable"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/deleteButton" />
</RelativeLayout>